@model IEnumerable<RentSiteProject.Models.Apartment>

@{
    ViewData["Title"] = "My Apartments";
}


<div class="d-flex flex-column flex-md-row">

    <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
            <span class="fs-4">Боковая панель</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li>
                <a asp-area="" asp-controller="Account" asp-action="MyAccount" class="nav-link text-white" aria-current="page">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"></use></svg>
                    Информация
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Apartments" asp-action="MyApartments" class="nav-link active" >
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
                    Мои квартиры
                </a>
            </li>
            <li>
                <a href="#" class="nav-link text-white">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#table"></use></svg>
                    Договоры
                </a>
            </li>
            <li>
                <a href="#" class="nav-link text-white">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#grid"></use></svg>
                    Документы
                </a>
            </li>
            <li>
                <a href="#" class="nav-link text-white">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle"></use></svg>
                    Помощь
                </a>
            </li>
        </ul>
        <hr>
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
                <strong>mdo</strong>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                <li><a class="dropdown-item" href="#">Новый проект...</a></li>
                <li><a class="dropdown-item" href="#">Настройка</a></li>
                <li><a class="dropdown-item" href="#">Профиль</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="#">Выйти</a></li>
            </ul>
        </div>
    </div>


@*    <div class="text-center p-3">
        <h2>My Account</h2>
        <p>Welcome, <strong>@Model.UserName</strong>!</p>
    </div>*@

    <p>
        <a asp-controller="ApartmentsManage" asp-action="Create">Create New Apartment</a>
    </p>
    <div class="text-center p-8">
        <h1>@ViewData["Title"]</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rooms)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MainPhoto)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                @foreach (var apartment in Model)
                {
                    <tr>
                        <th>
                            @Html.DisplayFor(modelItem => apartment.Title)
                        </th>
                        <td>
                            @Html.DisplayFor(modelItem => apartment.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => apartment.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => apartment.Rooms)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => apartment.Description)
                        </td>
                        <td>
                            <img src="@apartment.MainPhoto" alt="Main Photo" width="100" height="100" />
                        </td>
                        <td>
                            <a asp-controller="Apartments" asp-action="ApartmentDetails" asp-route-id="@apartment.Id">Details</a>
                        </td>
                        <td>
                            <a asp-controller="Apartments" asp-action="ApartmentsEdit" asp-route-id="@apartment.Id">Edit</a>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
    </div>

</div>


